<%= simple_form_for @recipe do |r| %>
  <%= flash[:error] %>
  <%= r.input :name, label: 'Nome da Receita:' %>
  <%= r.input :kitchen, label: 'Cozinha:' %>
  <%= r.input :type_of_food, label: 'Tipo de Comida:' %>
  <%= r.input :preference, label: 'Preferência de Comida:' %>
  <%= r.input :amount, label: 'Serve:' %>
  <%= r.input :preparation_time, label: 'Tempo de Preparo:' %>
  <%= r.input :difficulty, label: 'Nível de Dificuldade:' %>
  <%= r.input :ingredients, label: 'Ingredientes:' %>
  <%= r.input :steps, label: 'Passo-a-Passo:' %>
  <%= r.input :photo, label: 'Foto:', as: :file %>
  <%= r.button :submit, 'Cadastrar Receita:' %>
<% end %>
